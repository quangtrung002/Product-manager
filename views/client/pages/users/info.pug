extends ../../layouts/default.pug 
include ../../mixins/box-head.pug 

block main 
  .container.my-3 
    .row 
      .col-12 
        +box-head("Thông tin tài khoản")



    if (user.avatar)
      img(src=user.avatar width="150px" class="mb-3")
    else
      img(src="" width="150px" class="mb-3")

    if (user.fullName)
      p Họ tên: <b>#{user.fullName}</b>

    if (user.email)
      p Email: <b>#{user.email}</b>

    if (user.phone)
      p Số điện thoại: <b>#{user.phone}</b>

    a(href="/users/edit" class="btn btn-primary") Chỉnh sửa thông tin