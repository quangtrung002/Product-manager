extends ../../layouts/default.pug 
include ../../mixins/alert.pug 

block main 
  +alert-error(5000)
  
  .container.my-5 
    .row.justify-content-center 
      .col-8 
        h1(class="text-center") Nhập OTP 
        form(action="/users/password/otp" method="POST")
          div(class="form-group")
            label(for="email") Email 
            input(type="email", name="email" class="form-control" id="email" readonly value=email)
          div(class="form-group")
            label(for="email") OTP 
            input(type="otp", name="otp" class="form-control" id="otp" required)
          .form-group 
            button(type="submit" class="btn btn-primary btn-block") Gửi   